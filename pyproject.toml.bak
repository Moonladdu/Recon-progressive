[build-system]
requires = ["setuptools>=61.0"]
build-backend = "setuptools.build_meta"

[project]
name = "recon-progressive"
version = "0.2.0"
description = "Professional reconnaissance tool with modular architecture"
readme = "README.md"
requires-python = ">=3.8"
dependencies = [
    "pyyaml>=5.4",
    "rich>=12.0.0"
]
dynamic = []

[project.scripts]
recon-progressive = "recon_progressive.cli:main"

[tool.setuptools.packages.find]
where = ["src"]